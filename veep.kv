#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import Factory kivy.factory.Factory

<Add_operation_Popup>:
    operation_value: operation_value
    type_to_add_button: type_to_add_button
    type_to_rem_button: type_to_rem_button
    title_size: 0
    separator_height: 0
    size_hint: (1.1, 1.1)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    auto_dismiss: False
    background_color: 0, 0, 0, 0
    RelativeLayout:
        size_hint: (1, 1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.517}
        Button:
            on_press: root.dismiss()
            size_hint: (0.15, 1)
            pos_hint: {'x': 0, 'y': 0}
            background_color: 0, 0, 0, 0
            background_normal: ''            
        Button:
            on_press: root.dismiss()
            size_hint: (0.15, 1)
            pos_hint: {'right': 1, 'y': 0}
            background_color: 0, 0, 0, 0
            background_normal: ''
        Button:
            on_press: root.dismiss()
            size_hint: (1, 0.15)
            pos_hint: {'x': 0, 'top': 1}
            background_color: 0, 0, 0, 0
            background_normal: ''
        Button:
            on_press: root.dismiss()
            size_hint: (1, 0.15)
            pos_hint: {'x': 0, 'y': 0}
            background_color: 0, 0, 0, 0
            background_normal: ''
        
        RelativeLayout:
            canvas.before:
                Color:
                    rgba: 0.118, 0.118, 0.118, 1
                Rectangle:
                    size: self.size
            size_hint: (0.7, 0.7)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                id: operation_value
                size_hint: (1, 0.325)
                pos_hint: {'top': 1}
                text_size: self.size
                halign: 'right'
                valign: 'bottom'
                font_size: 80 / 3 # pix
                padding: 30, 30, 30, 30
            Button:
                id: type_to_add_button
                text: 'Доходы'
                font_size: 56 / 3 # pix
                bold: True
                color: (0.2, 1, 0.2, 1)
                size_hint: (0.5, 0.1)
                pos_hint: {'y': 0.575}
                background_color: 0, 0, 0, 0
                background_normal: ''
                background_down: ''
                on_press: root.operation_type_to_add(self)
                canvas.before:
                    Color:
                        rgba: 0.15, 0.85, 0.15, 1
                    Line:
                        width: 3 / 3 # pix
                        rectangle: self.x + 3 / 3, self.y + 3 / 3, self.width - 6 / 3, self.height - 6 / 3 # pix
            Button:
                id: type_to_rem_button
                text: 'Расходы'
                font_size: 56 / 3 # pix
                bold: True
                color: (1, 1, 1, 1)
                size_hint: (0.5, 0.1)
                pos_hint: {'y': 0.575, 'right': 1}
                background_color: 1, 0.15, 0.15, 1
                background_normal: ''
                background_down: ''
                on_press: root.operation_type_to_rem(self)
                canvas.before:
                    Color:
                        rgba: 1, 0.15, 0.15, 1
                    Line:
                        width: 3 / 3 # pix
                        rectangle: self.x + 3 / 3, self.y + 3 / 3, self.width - 6 / 3, self.height - 6 / 3 # pix

            GridLayout:
                cols: 4
                rows: 5
                size_hint: (1, 0.575)
                Button:
                    on_press: root.add_action(self)
                    text: 'С'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    color: 1, 0.5, 0.15, 1
                Button:
                    on_press: root.add_action(self)
                    text: '<-'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    color: 1, 0.5, 0.15, 1
                Button:
                    on_press: root.add_action(self)
                    text: '%'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    color: 1, 0.5, 0.15, 1
                Button:
                    on_press: root.add_action(self)
                    text: '/'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    color: 1, 0.5, 0.15, 1
                Button:
                    on_press: root.add_action(self)
                    text: '7'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '8'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '9'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '*'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    color: 1, 0.5, 0.15, 1
                Button:
                    on_press: root.add_action(self)
                    text: '4'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '5'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '6'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '-'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    color: 1, 0.5, 0.15, 1
                Button:
                    on_press: root.add_action(self)
                    text: '1'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '2'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '3'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '+'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    color: 1, 0.5, 0.15, 1
                Button:
                    on_press: root.add_action(self)
                    text: '.'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '0'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                Button:
                    on_press: root.add_action(self)
                    text: '='
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    color: 1, 0.5, 0.15, 1
                Button:
                    on_press: root.add_operation()
                    text: 'add'
                    font_size: 64 / 3 # pix
                    bold: True
                    background_color: 0, 0, 0, 0
                    pos_hint: {'x': 0, 'y': 0}
                    canvas.before:
                        Color:
                            rgba: 0.96, 0.4, 0.07, 1
                        Ellipse:
                            size: (self.size[0] * 0.8, self.size[0] * 0.8)
                            pos: (self.pos[0] + self.size[0] * 0.5 - self.size[0] * 0.4, self.pos[1] + self.size[1] * 0.5 - self.size[0] * 0.4)


<MainLayout>:
    purposes: purposes
    screen_manager: screen_manager
    operations_list: operations_list

    ScreenManager:
        transition: NoTransition()
        id: screen_manager
        name: 'screen_manager'
    
    # MAIN PAGE
        Screen:
            name: 'main'
        # BACKGROUND
            size_hint: (1, 1)
            canvas.before:
                Color:
                    rgba: 0.118, 0.118, 0.118, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        # INFORMATION
            GridLayout:
                cols: 2
                size_hint: (1, 0.25)
                pos_hint: {'top': 0.925}
                padding: 45 / 3, 30 / 3, 45 / 3, 30 / 3 # pix
                spacing: 30 / 3 # pix
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                RelativeLayout:
                    size_hint: (0.25, 0.25)
                    canvas.before:
                        Color:
                            rgba: 0.19, 0.19, 0.19, 1
                        RoundedRectangle:
                            radius: 30 / 3, 30 / 3, 30 / 3, 30 / 3 # pix
                            size: self.size
                    Label:
                        text: '1234567890'
                        font_size: 60 / 3 # pix
                        color: 0.8, 0.8, 0.8, 1
                        bold: True
                        size_hint: (0.84, None)
                        size: (1, 60 / 3) # pix
                        text_size: self.size
                        halign: 'left'
                        pos_hint: {'x': 0.08, 'top': 0.775}
                    Label:
                        text: 'Доход'
                        font_size: 44 / 3 # pix
                        color: 0.55, 0.55, 0.55, 1
                        bold: True
                        size_hint: (0.8, 0.2)
                        text_size: self.size
                        halign: 'left'
                        pos_hint: {'x': 0.08, 'y': 0.225}
                    Image:
                        source: 'images/buttons_icons/arrow.png'
                        size_hint: (0.3, 0.3)
                        pos_hint: {'right': 1.02, 'center_y': 0.5}

                        
                RelativeLayout:
                    size_hint: (0.25, 0.25)
                    canvas.before:
                        Color:
                            rgba: 0.19, 0.19, 0.19, 1
                        RoundedRectangle:
                            radius: 30 / 3, 30 / 3, 30 / 3, 30 / 3 # pix
                            size: self.size
                    Image:
                        source: 'images/buttons_icons/arrow.png'
                        size_hint: (0.3, 0.3)
                        pos_hint: {'right': 1.02, 'center_y': 0.5}
                RelativeLayout:
                    size_hint: (0.25, 0.25)
                    canvas.before:
                        Color:
                            rgba: 0.19, 0.19, 0.19, 1
                        RoundedRectangle:
                            radius: 30 / 3, 30 / 3, 30 / 3, 30 / 3 # pix
                            size: self.size
                    Image:
                        source: 'images/buttons_icons/arrow.png'
                        size_hint: (0.3, 0.3)
                        pos_hint: {'right': 1.02, 'center_y': 0.5}
                RelativeLayout:
                    size_hint: (0.25, 0.25)
                    canvas.before:
                        Color:
                            rgba: 0.19, 0.19, 0.19, 1
                        RoundedRectangle:
                            radius: 30 / 3, 30 / 3, 30 / 3, 30 / 3 # pix
                            size: self.size
                    Image:
                        source: 'images/buttons_icons/arrow.png'
                        size_hint: (0.3, 0.3)
                        pos_hint: {'right': 1.02, 'center_y': 0.5}

                    



        # PURPOSES
            RelativeLayout:
                size_hint: (1, 0.2)
                pos_hint: {'center_y': 0.5}
                Label:
                    text: 'Цели'
                    text_size: self.size
                    bold: True
                    font_size: 64 / 3 # pix
                    color: 0.8, 0.8, 0.8, 1
                    size_hint: (0.15, 0.2)
                    pos: (45 / 3, 0) # pix
                    pos_hint: {'top': 1}
                    halign: 'left'
                RelativeLayout:
                    size_hint: (0.1, 0.2)
                    pos_hint: {'top': 1}
                    pos: (root.size[0] - 45 / 3 - self.size[0], 1) # pix
                    Image:
                        source: 'images/buttons_icons/list.png'
                        size_hint: (1, 1)
                    Button:
                        size_hint: (1, 1)
                        pos_hint: {'right': 0.99, 'top': 1.01}
                        background_color: (0, 0, 0, 0)
                        background_normal: ''
                ScrollView:
                    size_hint: (1, 0.8)
                    pos_hint: {'y': 0}
                    do_scroll_y: False
                    bar_color: (0, 0, 0, 0)
                    bar_inactive_color: (0, 0, 0, 0)
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: None
                        width: self.minimum_width
                        GridLayout:
                            id: purposes
                            padding: 45 / 3, 30 / 3, 45 / 3, 30 / 3 # pix
                            spacing: 30 / 3 # pix
                            rows: 1
                            size_hint_y: 0.4
                            size_hint_x: None
                            width: self.minimum_width
                            RelativeLayout:
                                size_hint: (None, 1)
                                size: (480 / 3, 0) # pix
                                canvas.before:
                                    Color:
                                        rgba: 0.19, 0.19, 0.19, 1
                                    RoundedRectangle:
                                        radius: [30 / 3, 30 / 3, 30 / 3, 30 / 3] # pix
                                        size: self.size
                                    Color:
                                        rgba: 1, 1, 1, 1
                                    Rectangle:
                                        pos: (self.size[0] * 0.5 - 50 / 3, self.size[1] * 0.5 - 50 / 3) # pix
                                        size: (100 / 3, 100 / 3) # pix
                                        source: 'images/buttons_icons/plus_small.png'
                                Button:
                                    on_press: root.add_purpose()
                                    background_color: (0, 0, 0, 0)
                                    background_normal: ''
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint: (None, None)
                size: (168 / 3, 168 / 3) # pix
                pos_hint: {'center_y': 0.125, 'right': 0.97}
                canvas.before:
                    Color:
                        rgba: 0.96, 0.4, 0.07, 1
                    Ellipse:
                        size: self.size
                        pos: self.pos
                Button:
                    on_press: Factory.Add_operation_Popup().open()
                    background_color: (0, 0, 0, 0)
                    background_normal: ''
                Image:
                    source: 'images/buttons_icons/plus.png'
                    size_hint: (0.5, 0.5)

    # ACCOUNT PAGE
        Screen:
            name: 'accounts'
        # BACKGROUND
            size_hint: (1, 1)
            canvas.before:
                Color:
                    rgba: 0.118, 0.118, 0.118, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: 'accounts'

    # GRAPHS PAGE
        Screen:
            name: 'graphs'
        # BACKGROUND
            size_hint: (1, 1)
            canvas.before:
                Color:
                    rgba: 0.118, 0.118, 0.118, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: 'graphs'

    # OPERATIONS PAGE
        Screen:
            name: 'operations'
        # BACKGROUND
            size_hint: (1, 1)
            canvas.before:
                Color:
                    rgba: 0.118, 0.118, 0.118, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            AnchorLayout:
                size_hint: (1, 0.855)
                pos_hint: {'y': 0.07}
                ScrollView:
                    size: self.size
                    do_scroll_x: False
                    bar_color: (0, 0, 0, 0)
                    bar_inactive_color: (0, 0, 0, 0)
                    GridLayout:
                        id: operations_list
                        cols: 1
                        size_hint_y: None
                        padding: 45 / 3, 30 / 3, 45 / 3, 30 / 3 # pix
                        height: self.minimum_height
                        RelativeLayout:
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0.5, 1
                                Rectangle:
                                    size: self.size
                            size_hint_y: None
                            size: (1, 225 / 3) # pix
                            Button:
                                on_press: root.update_operations_list()
                            Label:
                                text: 'Здесь ничего нет :)'


# DATE
    FloatLayout:
        pos_hint: {'top': 1}
        size_hint: (1, 0.075)
        canvas.before:
            Color:
                rgba: 0.075, 0.075, 0.075, 1
            Rectangle:
                pos: self.pos
